pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                bat 'cd "%WORKSPACE%" && npm install'
            }
        }

        stage('Run Application') {
            steps {
                // Kill existing Node processes (ignore if none)
                bat 'taskkill /F /IM node.exe || exit 0'

                // Start the Node.js app in the background
                bat 'cd "%WORKSPACE%" && start /B node main.js'

                // Use ping for a 3-second delay instead of timeout
                bat 'ping -n 4 127.0.0.1 >nul'
            }
        }
    }

    post {
        success {
            echo '✅ App started successfully on port 3000!'
        }
        failure {
            echo '❌ Build failed — check console output.'
        }
    }
}
