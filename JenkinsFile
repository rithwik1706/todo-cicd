pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                bat 'cd "%WORKSPACE%" && npm install'
            }
        }

        stage('Run Application') {
            steps {
                // Run the app (just to test if it starts properly)
                bat '''
                cd "%WORKSPACE%"
                node main.js || exit 0
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Build succeeded!'
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}
