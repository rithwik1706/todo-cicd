pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                echo 'Installing dependencies...'
                bat 'npm install'
            }
        }

        stage('Run Express App') {
            steps {
                echo 'Starting Express app...'
                // Run in background
                bat 'start /B node main.js'
            }
        }
    }
}
